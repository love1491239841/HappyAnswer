<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.administrator.happyanswer">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/log"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/log"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppNoActionBar" />
        <activity
            android:name=".activity.LoginActivity"
            android:theme="@style/AppNoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.RegisterActivity"
            android:theme="@style/AppNoActionBar" />
        <activity android:name=".activity.UserSettingActivity"
            android:label="账户设置"/>
        <activity
            android:name=".activity.AnswerActivity"
            android:theme="@style/AppNoActionBar" />
        <activity
            android:name=".activity.RulesActivity"
            android:label="答题规则" />
        <activity
            android:name=".activity.NewsActivity"
            android:theme="@style/MainTheme"></activity>
        <activity android:name=".activity.RecordActivity"></activity>
        <activity android:name=".activity.PasswordActivity"></activity>
    </application>

</manifest>